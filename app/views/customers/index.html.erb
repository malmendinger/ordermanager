<div class="small-8 small-centered columns">
	<h2>Customers</h2>
	
	<table>
		<tbody>
		<% @customers.each do |customer| %>
			<tr>
				<td width="350"><%= link_to customer.name, customer_path(customer) %></td>
				<td>
					<ul class="button-group round">
						<li><%= link_to "Delete", customer, method: :delete, class:'button alert tiny' %></li>
						<li><%= link_to 'Edit', edit_customer_path(customer), class:'button tiny' %></li>
						<li><%= link_to 'View', customer_path(customer), class:'button tiny' %></li>
					</ul>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
	<a href="#" class="button small radius" data-reveal-id="addCustomer">Add Customer</a>
</div>

<div id="addCustomer" class="reveal-modal" data-reveal>
	<h3>Create New Customer</h3>
	<%= render partial: 'form' %>
</div>